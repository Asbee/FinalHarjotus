<UserControl
    x:Class="Game.Buildings.Jobs"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Game.Buildings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Height="600"
    Width="500">

    <Grid Background="Green">
        <Image Width="300" Height="400" Source="/Assets/jobs.jpg" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        
        <Button x:Name="CloseButton" Content="Close"  HorizontalAlignment="Left" Margin="425,10,0,0" VerticalAlignment="Top" Height="32" Click="CloseButton_Click"/>
        <Button x:Name="Burger" Content="Burger" HorizontalAlignment="Left" Margin="100,134,0,0" VerticalAlignment="Top" Click="Burger_Click"/>
        <Button x:Name="Market" Content="Market" HorizontalAlignment="Left" Margin="215,134,0,0" VerticalAlignment="Top" Click="Market_Click"/>
        <TextBlock x:Name="Jobsblock" HorizontalAlignment="Left" Margin="215,70,0,0" TextWrapping="Wrap" Text="Jobs 4 All" VerticalAlignment="Top" FontFamily="Impact" Height="30" Width="124" FontSize="21.333"/>
        <TextBlock x:Name="Getwork" HorizontalAlignment="Left" Margin="119,500,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="281"/>
        

    </Grid>
</UserControl>
